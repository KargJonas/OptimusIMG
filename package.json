{
  "name": "optimusimg",
  "version": "0.0.0-development",
  "description": "A Node.js module for optimizing images in build and runtime",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build:javascript-version": "rimraf build && tsc",
    "build:production-runtime": "rimraf dist && webpack -p",
    "test": "jest --coverage",
    "lint": "tslint --project \"tsconfig.lint.json\"",
    "prepare-for-release": "rimraf build && rimraf dist && npm run lint && npm run test && npm run build:javascript-version && npm run build:production-runtime",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukaVarga/OptimusIMG.git"
  },
  "keywords": [
    "image",
    "image-optimisation",
    "image-optimization",
    "image-analysis",
    "images",
    "typescript",
    "javascript",
    "optimisation",
    "optimization",
    "analysis"
  ],
  "author": "Luka Varga <varga.luka93@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukaVarga/OptimusIMG/issues"
  },
  "homepage": "https://github.com/lukaVarga/OptimusIMG#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.5.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.9",
    "travis-deploy-once": "^5.0.3",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.0",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "tests/__tests__/watch.spec.ts"
    ],
    "coverageReporters": [
      "text",
      "json",
      "lcov"
    ],
    "coverageDirectory": "test_coverage_dir",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": "@semantic-release/commit-analyzer",
    "generateNotes": "@semantic-release/release-notes-generator",
    "prepare": "@semantic-release/npm",
    "publish": ["@semantic-release/npm", "@semantic-release/github"]
  }
}
